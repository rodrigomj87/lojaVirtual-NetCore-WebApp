@page
@model AspNetCoreWebApp.Pages.AdminModel
@{
    ViewData["Title"] = "Área Administrativa";
    Layout = "_BackTemplate";
}

<header class="container p-3">
    <h1>Pedidos Pendentes</h1>
</header>

@if (Model.Pedidos.Count > 0)
{
    <main class="container">
        <table class="table table-striped table-light table-sm table-hover">
            <thead>
                <tr class="bg-dark text-white">
                    <th>@Html.DisplayNameFor(m => m.Pedidos[0].PedidoId)</th>
                    <th>@Html.DisplayNameFor(m => m.Pedidos[0].Cliente.Nome)</th>
                    <th>@Html.DisplayNameFor(m => m.Pedidos[0].ValorTotal)</th>
                    <th>@Html.DisplayNameFor(m => m.Pedidos[0].DataHoraPedido)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Pedidos)
                {
                    <tr>
                        <td>@item.PedidoId.ToString("D6")</td>
                        <td>@item.Cliente.Nome</td>
                        <td>@item.ValorTotal.ToString("C")</td>
                        <td>@item.DataHoraPedido.ToString()</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm p-1" asp-page="./PedidoAdmin/DetalhesPedido" asp-route-id="@item.PedidoId" title="Ver Itens do Pedido" data-toggle="tooltip">
                                <svg class="bi" width="24" height="24" fill="currentColor">
                                    <use xlink:href="/bi.svg#list-check" />
                                </svg>
                            </a>
                            <a class="btn btn-primary btn-sm p-1" asp-page="./PedidoAdmin/AlterarPedido" asp-route-id="@item.PedidoId" title="Alterar Pedido" data-toggle="tooltip">
                                <svg class="bi" width="24" height="24" fill="currentColor">
                                    <use xlink:href="/bi.svg#pencil-square" />
                                </svg>
                            </a>
                            <form class="d-inline-block" asp-page-handler="CancelarPedido" asp-route-id="@item.PedidoId" method="post" title="Cancelar Pedido" data-toggle="tooltip">
                                <button class="btn btn-danger btn-sm p-1" onclick="confirmarCancelamento(this);" type="button">
                                    <svg class="bi" width="24" height="24" fill="currentColor">
                                        <use xlink:href="/bi.svg#x-square" />
                                    </svg>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
}
else
{
    <h2>Não há pedidos realizados.</h2>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_CustomConfirm");}    
}